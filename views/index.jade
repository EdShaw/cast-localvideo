html
	head
		title LocalCast
		link(rel="stylesheet", href="/css/flatly.css")
		link(rel="stylesheet", href="/css/main.css")
		script(type='text/javascript', src='https://www.gstatic.com/cv/js/sender/v1/cast_sender.js')
	body
		.container-fluid
			.row
				.col-sm-3.full-height.bg-primary
					h3 Folders 
							.input-group
								input.form-control(id="currentPathInput",value="#{rootDirectory}")
								.input-group-btn
									button.btn.btn-info#setFolderBtn Go
					.list-group#folderList
						a.list-group-item
							i.glyphicon.glyphicon-folder-open
							| &nbsp; Here comes your folders
				.col-sm-4.full-height
					h3 Files 
						small Supported files will have play button with them
					.list-group#fileList
				.col-sm-5.full-height
					h3 Information &nbsp;
					#metadata
					.alert.alert-info#castStatus Initializing Cast API
					.well
						i Choose a network interface that your Chromecast can probably reach.
						- for(var i in interfaces)
							- for(var j in interfaces[i])
								- var network = interfaces[i][j];
								- if ( !network.internal && network.family == 'IPv4')
									.radio
										label
											input(type="radio",name="networkInterface", value="#{network.address}")
											| #{i} - #{network.address}
					video#vid(width="100%",controls,autoplay)
		script(src="/js/jquery.min.js")
		script(src="/js/history/bundled/html5/jquery.history.js")
		script(src="/js/bootstrap.js")
		script(src="/js/main.js")
